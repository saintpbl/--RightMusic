  indicator-active-color="#fff" indicator-dots circular autoplay >
    <swiper-item>
      <image src="/pages/images/banner1.jpg" mode="widthFix" style="width: 100%;"/>
    </swiper-item>
    <swiper-item>
      <image src="/pages/images/banner2.jpg" mode="widthFix" style="width: 100%;"/>
    </swiper-item>
